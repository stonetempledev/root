<config>

  <blocks>

    <!-- sections -->
    <div><![CDATA[<div>{@text@}{@childs@}</div>]]></div>
    <p><![CDATA[<p class='lead'>{@text@}{@childs@}</p>]]></p>
    <hr><![CDATA[<hr style='margin-top:10px;margin-bottom:10px;'/>]]></hr>
    <m-20><![CDATA[<div style='height:20px;'>&nbsp;</div>]]></m-20>
    <m-40><![CDATA[<div style='height:40px;'>&nbsp;</div>]]></m-40>
    <span><![CDATA[<span>{@text@}{@childs@}</span>]]></span>

    <!-- titles -->
    <title><![CDATA[<h3 style='text-transform: uppercase;'>{@text@}&nbsp;<small>{@des@}</small></h3>]]></title>
    <title-lblu><![CDATA[<h3 style='color:white;text-transform:uppercase;background-color:lightblue;'>{@text@}&nbsp;<small>{@des@}</small></h3>]]></title-lblu>
    <title-blu><![CDATA[<h3 style='color:white;text-transform:uppercase;background-color:royalblue;'>{@text@}&nbsp;<small>{@des@}</small></h3>]]></title-blu>
    <title-md><![CDATA[<h4 style='text-transform: uppercase;background-color:{@bg-color@};'>{@text@}&nbsp;<small>{@des@}</small></h4>]]></title-md>
    <title-sm><![CDATA[<h5 style='text-transform: uppercase;background-color:{@bg-color@};'>{@text@}&nbsp;<small>{@des@}</small></h5>]]></title-sm>
    <title-sm-blu><![CDATA[<h5 style='text-transform: uppercase;background-color:lightblue;'>{@text@}&nbsp;<small>{@des@}</small></h5>]]></title-sm-blu>
    <title-xs><![CDATA[<h6 style='text-transform: uppercase;background-color:{@bg-color@};'>{@text@}&nbsp;<small>{@des@}</small></h6>]]></title-xs>
    <title-xs-inline><![CDATA[<span class='h6' style='text-transform: uppercase;'>{@text@}</span>]]></title-xs-inline>
    <title-label-ok><![CDATA[<h3 style='text-transform: uppercase;'><span class='badge badge-success d-block' style='white-space:normal;'>{@text@}</span></h3>]]></title-label-ok>
    <title-label-war><![CDATA[<h3 style='text-transform: uppercase;'><span class='badge badge-warning d-block' style='white-space:normal;'>{@text@}</span></h3>]]></title-label-war>
    <title-label-err><![CDATA[<h3 style='text-transform: uppercase;'><span class='badge badge-danger d-block' style='white-space:normal;'>{@text@}</span></h3>]]></title-label-err>

    <!-- blocks -->
    <text-box><![CDATA[<input type='text' style='width:100%' value="{@text@}">]]></text-box>
    <label><![CDATA[<span class='h3'><span class='badge badge-primary d-block' style='white-space:normal;font-weight:normal;'>{@text@}</span></span>]]></label>
    <label-sm><![CDATA[<span class='h5'><span class='badge badge-primary ml-1 mr-1' style='white-space:normal;font-weight:normal;'>{@text@}</span></span>]]></label-sm>
    <btn-lg>
      <![CDATA[<button class='btn {@tp::btn-#value#@} btn-lg btn-block' {@onclick::onclick="#value#"@}
      style='text-transform: uppercase;white-space:normal;'>{@text@}</button>]]>
    </btn-lg>
    <btn-sm>
      <![CDATA[<button class='btn {@tp::btn-#value#@} btn-sm btn-block' {@onclick::onclick="#value#"@}
      style='text-transform: uppercase;white-space:normal;'>{@text@}</button>]]>
    </btn-sm>

    <!-- grid -->
    <row><![CDATA[<div class='row' style='margin-top:3px;margin-bottom:3px;'>{@childs@}</div>]]></row>
    <col><![CDATA[<div class='col-md-{@cols@}'>{@childs@}</div>]]></col>

    <!-- list -->
    <ul><![CDATA[<ul class="list-group">{@childs@}</ul>]]></ul>
    <li><![CDATA[<li class="list-group-item" style="border-left:{@brd-l@};border-top:{@brd-t@};padding-left:5px;border-right:0px;padding-right:0px;">{@text@}{@childs@}</li>]]></li>
    <l-row-var>
      <![CDATA[<li class="list-group-item"><b style='text-transform: uppercase;'>{@title@}</b>: {@text@}</li>]]>
    </l-row-var>
    <!-- list -->
    <list><![CDATA[<div class="list-group">{@childs@}</div>]]></list>
    <l-row>
      <![CDATA[<a class="list-group-item list-group-item-action flex-column align-items-start" href='{@href@}'>
      <div class="d-flex w-90 justify-content-between">
        <h5 class="mb-1">{@title@}</h5>
        <small>{@tit-small@}</small></div>
      <p class="mb-1">{@text@}</p>
      <small>{@foot@}</small>
          </a>]]>
    </l-row>
    <l-row-btn>
      <![CDATA[<a class="list-group-item list-group-item-action flex-column align-items-start" href='{@href@}' row-data='{@row-data@}'>
      <div class="d-flex w-90 justify-content-between">
        <h5 class="mb-1">{@title@}</h5>
        <small>{@tit-small@}</small></div>
      <p class="mb-1">{@text@}</p>
      <small>{@foot@}</small>
      <span class="float-right" style='display:{@display-del@}'>
        <button type="button" class="btn btn-{@style-btn@}" onclick="{@on-click-btn@} return false;">{@title-btn@}</button>
      </span></a>]]>
    </l-row-btn>
    <l-row-btn-2>
      <![CDATA[<a class="list-group-item list-group-item-action flex-column align-items-start" href='{@href@}' row-data='{@row-data@}'>
      <div class="d-flex w-90 justify-content-between">
        <h5 class="mb-1">{@title@}</h5>
        <small>{@tit-small@}</small></div>
      <p class="mb-1">{@text@}</p>
      <small>{@foot@}</small>
      <span class="float-right" style='display:{@display-btn@};margin-left:5px;'>
        <button type="button" class="btn btn-{@style-btn@}" onclick="{@on-click-btn@} return false;">{@title-btn@}</button>
      </span><span class="float-right" style='display:{@display-btn-2@}'>
        <button type="button" class="btn btn-{@style-btn-2@}" onclick="{@on-click-btn-2@} return false;">{@title-btn-2@}</button>
      </span></a>]]>
    </l-row-btn-2>
    <d-row><![CDATA[<div style='border-bottom:1pt solid lightgrey;'><b>{@title@}</b>{@text@}</div>]]></d-row>

  </blocks>

</config>
