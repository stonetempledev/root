<config>

  <tables>
    <table name="cmds-groups" cols="name,title,des">
      <rows>
        <row name="base" title="Base Actions" des="azioni basilari ed essenziali"/>
        <row name="sys" title="System Actions" des="comandi di sistema speciali, per manutenzione ed amministrazione"/>
        <row name="elements" title="Elements Actions" des="azioni di gestione elementi"/>
        <row name="backups" title="Gestione Backups database" des="comandi per la gestione dei backups del database"/>
      </rows>
    </table>
    <table name="base-cmds" cols="group,action,object,subobjs,des,page">
      <rows>
        <!-- base -->
        <row group="base" action="view" object="user" des="visualizza i dettagli sull'utente loggato"/>
        <row group="base" action="exit" des="effettua il log out dall'ambiente"/>
        <!-- sys -->
        <row group="sys" action="view" object="cmds" des="visualizza tutti i comandi disponibili per l'utente loggato"/>
        <row group="sys" action="view" object="vars" des="visualizza le variabile di configurazione e di sistema"/>
        <row group="sys" action="view" object="logs" des="visualizza la lista completa dei logs disponibili"/>
        <row group="sys" action="view" object="log-today" des="visualizza il log di oggi"/>
        <row group="sys" action="view" object="log" subobjs="{file}" des="visualizza il log specifico"/>
        <row group="sys" action="crypt" object="{phrase}" subobjs="{password}" des="cripta la frase specificata in SHA1 oppure nel sistema interno più sofisticato con password"/>
        <row group="sys" action="open" object="test" page="test.aspx" des="apre la pagina di test"/>
        <row group="sys" action="check" object="conn" des="verifica connessione al database"/>
        <!-- backups -->
        <row group="backups" action="gen" object="backup" page="backups.aspx" des="genera backup del database"/>
        <row group="backups" action="view" object="backups" page="backups.aspx" des="visualizza la lista dei backups generati"/>
        <row group="backups" action="restore" object="backup" page="backups.aspx" des="ripristino backup del database"/>
        <!-- elements -->
        <row group="elements" action="view" object="element" subobjs="[id:'id element']" page="element.aspx" des="visualizza l'elemento"/>
        <row group="elements" action="xml" object="element" subobjs="[id:'id element']" page="element.aspx" des="edit e salvataggio dell'elemento"/>
      </rows>
    </table>
  </tables>

</config>
