    <query name="check-user" des="check user logged">
      <![CDATA[declare @client_id integer;
      
      select @client_id = id_client from client_ips where ip_address = {@txtqry='address_ip'};
      
      if @client_id is null 
      begin
        insert into client_ips (ip_address) values ({@txtqry='address_ip'});
        set @client_id = @@IDENTITY;
      end
      
      select t.*
       from (select u.id_user, u.[user_name], cl.dt_ins, cl.for_days, datediff(day, cl.dt_ins, getdate()) as n_days
        from users u
        join client_logged cl on cl.id_client = @client_id and cl.id_user = u.id_user) t
        where t.for_days is not null and t.for_days >= t.n_days]]>
    </query>

    <query name="login-user" des="autenticazione utente">
      <![CDATA[declare @client_id integer;
      select @client_id = id_client from client_ips where ip_address = {@txtqry='address_ip'};
      if @client_id is null 
      begin
        insert into client_ips (ip_address) values ({@txtqry='address_ip'});
        set @client_id = @@IDENTITY;
      end
      
      declare @id_user integer;
      select @id_user = id_user 
       from users where user_name = {@txtqry='user_name'} and password = master.dbo.fn_varbintohexstr(HASHBYTES('SHA1', {@txtqry='password'}));
      if @id_user is null
      begin
       raiserror ('Utente o password non validi!', 16, 1);  
       return;
      end
       
      delete from client_logged where id_client = @client_id;
      insert into client_logged (id_client, id_user, for_days, dt_ins)
       values (@client_id, @id_user, {@null='days'}, getdate());

      select u.id_user, u.[user_name], cl.dt_ins
       from users u
       join client_logged cl on cl.id_client = @client_id and cl.id_user = u.id_user
        and u.id_user = @id_user;]]>
    </query>

    <query name="logout-user" des="logout utente">
      <![CDATA[delete from client_logged 
       where id_client = (select id_client from client_ips where ip_address = {@txtqry='address_ip'})]]>
    </query>

